<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>100</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<controls>
		<include>Background</include>
		<control type="group">
			<include>Window_OpenClose</include>
			<!-- left -->
			<include content="ContentPanel">
			</include>
			<control type="group">
				<top>73</top>
				<include content="SideMenuHeadline">
					<param name="nr">1</param>
					<param name="label">$LOCALIZE[5]</param>
				</include>
				<control type="grouplist" id="100">
					<description>button area</description>
					<left>0</left>
					<top>55</top>
					<bottom>130</bottom>
					<width>470</width>
					<usecontrolcoords>true</usecontrolcoords>
					<onleft>9999</onleft>
					<onright>200</onright>
					<onup>6666</onup>
					<ondown>noop</ondown>
					<control type="button" id="101">
						<width>400</width>
						<height>50</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>Reg22</font>
						<textoffsetx>50</textoffsetx>
						<textcolor>panel_text</textcolor>
						<focusedcolor>panel_text</focusedcolor>
						<selectedcolor>panel_text</selectedcolor>
						<shadowcolor>text_shadow</shadowcolor>
						<texturefocus colordiffuse="panel_hover">common/white.jpg</texturefocus>
						<include>NoTextures</include>
						<label>Widgets</label>
					</control>
				</control>
			</control>
			<!-- right -->
			<control type="group">
				<control type="grouplist" id="200">
					<description>control area</description>
					<top>128</top>
					<left>400</left>
					<pagecontrol>60</pagecontrol>
					<right>0</right>
					<bottom>50</bottom>
					<onleft>100</onleft>
					<onright>noop</onright>
					<onup>6666</onup>
					<ondown>noop</ondown>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<height>50</height>
						<font>med22</font>
						<textoffsetx>25</textoffsetx>
						<textcolor>panel_text</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
						<aligny>center</aligny>
						<label>Widgets</label>
					</control>
					<control type="radiobutton" id="201">
						<include content="SettingsButton">
							<param name="textoffsetx">35</param>
						</include>
						<onclick>Skin.ToggleSetting(HideLibaryWidgets)</onclick>
						<selected>!Skin.HasSetting(HideLibaryWidgets)</selected>
						<label>Show widgets based on the local Kodi library</label>
					</control>
					<control type="radiobutton" id="202">
						<include content="SettingsButton">
							<param name="textoffsetx">35</param>
						</include>
						<onclick>Skin.ToggleSetting(HideEmbyConWidgets)</onclick>
						<selected>!Skin.HasSetting(HideEmbyConWidgets)</selected>
						<label>Show widgets based on the EmbyCon plugin</label>
					</control>
				</control>		
				<include content="list_mask_vertical">
					<param name="height" value="70"/>
					<param name="left" value="400"/>
					<param name="right" value="0"/>
					<param name="id" value="5"/>
					<param name="visible_forced" value="true"/>
				</include>
			</control>
			<control type="scrollbar" id="60">
				<right>0</right>
				<top>58</top>
				<width>5</width>
				<bottom>0</bottom>
				<orientation>vertical</orientation>
			</control>
			<control type="group">
				<include>OpenClose_Right</include>
				<control type="textbox" id="6">
					<description>description area</description>
					<left>510</left>
					<bottom>25</bottom>
					<right>60</right>
					<height>102</height>
					<font>font12</font>
					<align>justify</align>
					<textcolor>button_focus</textcolor>
					<autoscroll time="3000" delay="5000" repeat="5000">true</autoscroll>
				</control>
			</control>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">		
			<param name="id">100</param>
			<param name="enabled">false</param>
			<param name="sidebar_id">9999</param>
			<param name="custom_animation">[[Control.IsVisible(54) + Container(540).HasPrevious]] | [Control.IsVisible(55) + Container(550).HasPrevious]</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">100</param>
		</include>
	</controls>
</window>
