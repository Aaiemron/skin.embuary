						<left>70</left>
						<control type="image">
							<top>-2</top>
							<left>-2</left>
							<width>282</width>
							<height>420</height>
							<texture>items/shadow_poster.png</texture>
						</control>
						<control type="image">
							<width>276</width>
							<height>414</height>
