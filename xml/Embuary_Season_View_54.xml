							<label>$PARAM[mainlabel]</label>
							<visible>String.IsEmpty(ListItem.Art(tvshow.poster))</visible>
						</control>
						<control type="image">
							<width>276</width>
							<height>414</height>
							<texture scalediffuse="false" diffuse="items/mask_poster.png" background="true">$INFO[ListItem.Art(tvshow.poster)]</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<control type="group">
							<width>276</width>
							<height>414</height>
							<control type="group">
								<visible>String.IsEqual(Window(home).Property(TVShowOverlay),OverlayWatched.png)</visible>
								<right>8</right>
								<top>9</top>
								<width>44</width>
								<height>44</height>
								<control type="image">
									<width>44</width>
									<height>44</height>
									<texture colordiffuse="emby">items/bubble_small.png</texture>
									<aspectratio>keep</aspectratio>
								</control>
								<control type="label">
									<top>9</top>
									<left>2</left>
									<width>44</width>
									<height>44</height>
									<label></label>
									<font>FontAwesome20Light</font>
									<shadowcolor>text_shadow</shadowcolor>
									<align>center</align>
								</control>
							</control>
						</control>
					</control>
					<!-- meta -->
					<control type="grouplist">
						<left>370</left>
						<orientation>vertical</orientation>
						<height>500</height>
						<align>top</align>
						<itemgap>0</itemgap>
						<width>1480</width>
						<control type="label">
							<width>1040</width>
							<height>60</height>
							<label>$INFO[ListItem.TvShowTitle]</label>
							<font>Reg37</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="grouplist">
							<height>40</height>
							<width>1040</width>
							<itemgap>5</itemgap>
							<orientation>horizontal</orientation>
							<control type="label">
								<width>auto</width>
								<height>24</height>
								<label></label>
								<font>Material24</font>
								<textcolor>red</textcolor>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>!String.IsEmpty(Window(home).Property(TvShowRating))</visible>
							</control>
							<control type="label">
								<width>auto</width>
								<height>24</height>
								<label>$INFO[Window(home).Property(TvShowRating)]   </label>
								<font>reg20</font>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>!String.IsEmpty(Window(home).Property(TvShowRating))</visible>
							</control>
							<control type="label">
								<width>auto</width>
								<height>24</height>
								<label>$INFO[Window(home).Property(TVShowTotalSeasons),$LOCALIZE[33054]: ]   </label>
								<font>reg20</font>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>!String.IsEmpty(Window(home).Property(TVShowTotalSeasons))</visible>
							</control>
							<control type="label">
								<width>auto</width>
								<height>24</height>
								<label>$INFO[Window(home).Property(TVShowTotalEpisodes),$LOCALIZE[20360]: ]   </label>
								<font>reg20</font>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>!String.IsEmpty(Window(home).Property(TVShowTotalEpisodes))</visible>
							</control>
							<control type="label">
								<width>auto</width>
								<height>24</height>
								<label>$LOCALIZE[20074]: $INFO[ListItem.Mpaa]   </label>
								<font>reg20</font>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>!String.IsEmpty(ListItem.Mpaa)</visible>
							</control>
							<control type="label">
								<width>auto</width>
								<height>24</height>
								<label>$INFO[Window(home).Property(TVShowPremiered),$LOCALIZE[20416]: ]   </label>
								<font>reg20</font>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>!String.IsEmpty(Window(home).Property(TVShowPremiered))</visible>
							</control>
						</control>
						<control type="label">
							<width>auto</width>
							<height>40</height>
							<label>$INFO[ListItem.Genre]</label>
							<font>reg20</font>
							<textcolor>emby</textcolor>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="textbox">
							<width>1040</width>
							<height>235</height>
							<align>justify</align>
							<aligny>top</aligny>
							<label>$INFO[ListItem.Plot]</label>
							<font>Light24</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>			
					</control>
					<!-- logo -->
					<control type="image">
						<right>70</right>
						<width>400</width>
						<height>155</height>
						<texture>$INFO[ListItem.Art(tvshow.clearlogo)]</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</control>
				<control type="group">
					<top>481</top>
					<include content="widget_headline">
						<param name="headline">$LOCALIZE[33054]</param>
						<param name="left">65</param>
					</include>
					<control type="list" id="54">
						<visible>Container.Content(seasons)</visible>
						<top>30</top>
						<width>1920</width>
						<scrolltime>200</scrolltime>
						<movement>6</movement>
						<orientation>horizontal</orientation>
						<preloaditems>4</preloaditems>
						<ondown>202</ondown>
						<include content="Bounce_Right">
							<param name="id">54</param>
						</include>
						<onright>SetProperty(BounceRight,1,home)</onright>
						<onright>noop</onright>
						<onleft>9999</onleft>
						<onup>7000</onup>
						<pagecontrol>17</pagecontrol>
						<viewtype label="$LOCALIZE[31006]">list</viewtype>
						<itemlayout width="257">
							<control type="group">							
								<left>70</left>
								<top>64</top>
								<include content="PosterLayout_Size2">
									<param name="mainlabel" value="$VAR[MainListLabel]" />
