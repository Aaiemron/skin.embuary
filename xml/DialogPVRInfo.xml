<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- mediasource -->
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<!-- Hidden scrollbar -->
		<control id="96" type="scrollbar">
			<left>-1200</left>
			<width>100</width>
			<height>1</height>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>
		<!-- Background -->
		<include>Background</include>
		<!-- Thumb image -->
		<control type="group">
			<include>Window_OpenClose</include>
			<include>FullscreenDimensions</include>
			<control type="group">
				<top>128</top>
				<width>1920</width>
				<control type="group">
					<left>70</left>
					<width>590</width>
					<control type="group">
						<control type="image">
							<top>-2</top>
							<left>-2</left>
							<width>596</width>
							<height>338</height>
							<texture>items/shadow_wide_big.png</texture>
						</control>
						<control type="image">
							<width>590</width>
							<height>332</height>
							<texture colordiffuse="green" diffuse="items/mask_wide_big.png">common/white.jpg</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
						</control>
						<control type="image">
							<width>590</width>
							<height>332</height>
							<texture colordiffuse="thumb_background" diffuse="items/mask_wide_big.png">common/white.jpg</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Icon) + !String.StartsWith(ListItem.Icon,Default)</visible>
						</control>
						<control type="textbox">
							<top>10</top>
							<left>10</left>
							<width>570</width>
							<height>312</height>
							<font>Light24</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>$VAR[MainListLabel]</label>
							<visible>String.IsEmpty(ListItem.Icon) | String.StartsWith(ListItem.Icon,Default)</visible>
						</control>
						<control type="image">
							<width>590</width>
							<height>332</height>
							<texture diffuse="items/mask_wide_db.png" background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<bordersize>20</bordersize>
							<visible>!String.StartsWith(ListItem.Icon,Default)</visible>
						</control>
						<control type="group">
							<width>590</width>
							<height>332</height>
							<include>bubble_overlay</include>
							<include>bubble_play</include>
						</control>
						<include content="progress">
							<param name="top" value="328"/>
							<param name="width" value="590"/>
						</include>
					</control>
				</control>
				<!-- meta -->
				<control type="grouplist">
					<left>684</left>
					<orientation>vertical</orientation>
					<height>920</height>
					<width>1166</width>
					<align>top</align>
					<itemgap>0</itemgap>
					<control type="label">
						<width>1166</width>
						<height>60</height>
						<label>$INFO[ListItem.Title]</label>
						<font>Reg37</font>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="grouplist">
						<height>60</height>
						<width>1166</width>
						<itemgap>5</itemgap>
						<orientation>horizontal</orientation>
						<control type="label">
							<width>auto</width>
							<height>60</height>
							<label>[COLOR softgrey]$VAR[PVREpisodeName][/COLOR]</label>
							<font>Reg37</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</control>
					<control type="grouplist">
						<height>40</height>
						<width>1166</width>
						<itemgap>5</itemgap>
						<orientation>horizontal</orientation>
						<control type="label">
							<width>auto</width>
							<height>24</height>
							<label>$INFO[ListItem.Date]$INFO[ListItem.Endtime, - ]   </label>
							<font>reg22</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<width>auto</width>
							<height>24</height>
							<label>$INFO[ListItem.Channelnumber,,. ]$INFO[ListItem.Channelname]   </label>
							<font>reg22</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</control>
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>65</height>
						<itemgap>5</itemgap>
						<width>1166</width>
						<include>PVRFlags</include>
					</control>
					<control type="grouplist" id="100">
						<height>75</height>
						<orientation>horizontal</orientation>
						<itemgap>5</itemgap>
						<onleft>9999</onleft>
						<onright>noop</onright>
						<control type="button" id="5">
							<label>$VAR[TuneInLabel]</label>
							<onup>SetFocus(6666)</onup>
						</control>
						<control type="button" id="102">
							<label>$LOCALIZE[31069]</label>
							<onup>SetFocus(6666)</onup>
							<ondown>SetFocus(200)</ondown>
							<onclick>back</onclick>
						</control>
						<control type="button" id="101">
							<visible>Control.IsVisible(96)</visible>
							<label>$LOCALIZE[31013]</label>
							<onclick>RunScript(script.skin.helper.service,action=textviewer,info=textviewer,header='$ESCVAR[TinyInfoDialogHeadline]',message='$ESCVAR[TinyInfoDialogPlot]')</onclick>
							<onup>SetFocus(6666)</onup>
						</control>
						<control type="button" id="6">
							<visible>Control.IsVisible(96)</visible>
							<onup>SetFocus(6666)</onup>
						</control>
						<control type="button" id="9">
							<label>19061</label>
							<onup>SetFocus(6666)</onup>
						</control>
						<control type="button" id="4">
							<label>$LOCALIZE[31021]</label>
							<onup>SetFocus(6666)</onup>
						</control>
					</control>
					<control type="label">
						<width>1166</width>
						<height>40</height>
						<label>$INFO[ListItem.Genre]</label>
						<font>reg22</font>
						<textcolor>emby</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="textbox">
						<width>1166</width>
						<height>565</height>
						<align>justify</align>
						<aligny>top</aligny>
						<label>$INFO[ListItem.Plot]</label>
						<font>Light24</font>
						<shadowcolor>text_shadow</shadowcolor>
						<autoscroll>false</autoscroll>
						<pagecontrol>96</pagecontrol>
					</control>
				</control>
			</control>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">		
			<param name="id">100</param>
			<param name="enabled">false</param>
			<param name="sidebar_id">9999</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">100</param>
		</include>
	</controls>
</window>