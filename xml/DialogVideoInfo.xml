<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<!-- Hidden scrollbar -->
		<control id="96" type="scrollbar">
			<left>-1200</left>
			<width>100</width>
			<height>1</height>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>
		<!-- Content -->
		<include condition="String.IsEqual(ListItem.DBType,movie)">MovieInfoLayout</include>
		<include condition="String.IsEqual(ListItem.DBType,tvshow)">TVShowInfoLayout</include>
		<include condition="!String.IsEqual(ListItem.DBType,movie) + !String.IsEqual(ListItem.DBType,tvshow)">TinyInfoLayout</include>
		<!-- header bar -->
		<include content="HeaderBar">		
			<param name="id">100</param>
			<param name="enabled">false</param>
			<param name="sidebar_id">9999</param>
			<param name="custom_animation">Container(500).HasPrevious</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>

	</controls>
</window>
