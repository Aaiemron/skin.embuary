<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="List_View_53">
		<control type="group">
			<visible>Control.IsVisible(53)</visible>
			<!-- Thumb image -->
			<control type="group">
				<visible>true</visible>
				<right>70</right>
				<top>168</top>
				<width>590</width>
				<control type="group">
					<control type="image">
						<top>-2</top>
						<left>-2</left>
						<width>596</width>
						<height>338</height>
						<texture>items/shadow_wide_big.png</texture>
					</control>
					<control type="image">
						<width>590</width>
						<height>332</height>
						<texture colordiffuse="green" scalediffuse="false" diffuse="items/mask_wide_big.png">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
						<visible>String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(fanart)) + ![!String.IsEmpty(ListItem.Art(thumb)) + Container.Content(episodes)]</visible>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>570</width>
						<height>312</height>
						<font>Light24</font>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[MainListLabel]</label>
						<visible>String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(fanart)) + ![!String.IsEmpty(ListItem.Art(thumb)) + Container.Content(episodes)]</visible>
					</control>
					<control type="image">
						<width>590</width>
						<height>332</height>
						<texture scalediffuse="false" diffuse="items/mask_wide_db.png" background="true">$VAR[IconLandscape]</texture>
						<fadetime>400</fadetime>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="group">
						<width>590</width>
						<height>332</height>
						<include>bubble_overlay</include>
						<include content="bubble_play">
							<param name="top" value="200"/>
						</include>
					</control>
					<control type="progress">
						<top>327</top>
						<width>590</width>
						<height>5</height>
						<texturebg colordiffuse="black" border="2">common/ProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture colordiffuse="emby"  border="2">common/ProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<info>ListItem.PercentPlayed</info>
						<visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
					</control>
					<include content="widget_labels">
						<param name="top">348</param>
						<param name="width">590</param>
					</include>
				</control>
				<control type="grouplist">
					<orientation>vertical</orientation>
					<top>415</top>
					<height>500</height>
					<align>top</align>
					<itemgap>00</itemgap>
					<width>590</width>
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<top>500</top>
						<height>70</height>
						<align>center</align>
						<itemgap>10</itemgap>
						<width>590</width>
						<include>MediaFlags</include>
					</control>
					<control type="textbox">
						<width>590</width>
						<height>100</height>
						<label>$INFO[ListItem.TagLine,,[CR][CR]]</label>
						<font>Reg22</font>
						<shadowcolor>text_shadow</shadowcolor>
						<align>center</align>
					</control>					
				</control>
			</control>
			<!-- List -->
			<control id="53" type="list">
				<visible>!Container.Content(seasons) + !Container.Content(episodes)</visible>
				<top>168</top>
				<width>1230</width>
				<height>916</height>
				<onup condition="Control.IsVisible(7000)">SetFocus(7000)</onup>
				<onup condition="!Control.IsVisible(7000)">SetFocus(6666)</onup>
				<onright condition="Control.IsVisible(7000)">SetFocus(7000)</onright>
				<onright condition="!Control.IsVisible(7000)">SetFocus(6666)</onright>
				<ondown>noop</ondown>
				<onleft>9999</onleft>
				<defaultcontrol always="true">0</defaultcontrol>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<pagecontrol>17</pagecontrol>
				<scrolltime>0</scrolltime>
				<preloaditems>4</preloaditems>
				<itemlayout height="110" width="1160">
					<control type="group">
						<left>70</left>
						<include content="ListLayout">
						</include>
					</control>
				</itemlayout>
				<focusedlayout height="110" width="1160">
					<include>SetPropertyOnFocus</include>
					<control type="group">
						<left>70</left>
						<include content="ListLayout">
							<param name="focused" value="true"/>
						</include>
					</control>
				</focusedlayout>
			</control>
			<include content="list_mask_vertical">
				<param name="height" value="65"/>
				<param name="id" value="53"/>
				<param name="visible_forced" value="true"/>
			</include>
			<include content="ScrollbarVertical"/>
		</control>
	</include>
</includes>