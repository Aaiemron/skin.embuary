<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Set_View_56">
		<!-- set 56 -->
		<control type="grouplist" id="560">
			<include>Visible_OpenClose</include>
			<visible>Control.IsVisible(56)</visible>
			<include>Bounce_Up_Down</include>
			<width>2130</width>
			<height>100%</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">400</scrolltime>
			<itemgap>-80</itemgap>
			<!-- Meta -->
			<control type="group">
				<width>1920</width>
				<height>1077</height>
				<control type="group">
					<top>128</top>
					<height>435</height>
					<width>1920</width>
					<!-- poster -->
					<include>MetaPoster</include>
					<!-- meta -->
					<control type="grouplist">
						<left>370</left>
						<orientation>vertical</orientation>
						<height>500</height>
						<align>top</align>
						<itemgap>0</itemgap>
						<width>1480</width>
						<control type="label">
							<width>1040</width>
							<height>60</height>
							<label>$INFO[ListItem.Title]</label>
							<font>Reg37</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<!-- small meta -->
						<control type="group">
							<height>40</height>
							<include>MetaShowInfos</include>
							<visible>Container.Content(tvshows)</visible>
						</control>
						<control type="group">
							<height>40</height>
							<include>MetaMovieInfos</include>
							<visible>!Container.Content(tvshows)</visible>
						</control>
						<!-- buttons -->
						<control type="grouplist" id="100">
							<height>75</height>
							<orientation>horizontal</orientation>
							<itemgap>5</itemgap>
							<onright>noop</onright>
							<onleft>9999</onleft>
							<control type="button" id="56101">
								<visible>!String.IsEmpty(ListItem.FileNameAndPath)</visible>
								<include>LightGreyButton</include>
								<label>$VAR[VideoInfoButton8]</label>
								<onup>SetFocus(6666)</onup>
								<onclick>SetFocus(50)</onclick>
								<onclick>Select</onclick>
								<ondown>SetFocus(50)</ondown>
							</control>
							<control type="button" id="56102">
								<visible>Container.Content(tvshows)</visible>
								<include>LightGreyButton</include>
								<label>$LOCALIZE[1024]</label>
								<onup>SetFocus(6666)</onup>
								<onclick>SetFocus(50)</onclick>
								<onclick>Select</onclick>
								<ondown>SetFocus(50)</ondown>
							</control>
							<control type="button" id="56103">
								<visible>Control.IsVisible(18)</visible>
								<include>LightGreyButton</include>
								<label>$LOCALIZE[31013]</label>
								<onclick>RunScript(script.skin.helper.service,action=textviewer,header='$ESCINFO[ListItem.Title]',message='$ESCINFO[ListItem.Plot]')</onclick>
								<onup>SetFocus(6666)</onup>
								<ondown>SetFocus(50)</ondown>
							</control>
							<control type="button" id="56104">
								<visible>!String.IsEmpty(ListItem.Trailer)</visible>
								<include>LightGreyButton</include>
								<label>$LOCALIZE[20410]</label>
								<onup>SetFocus(6666)</onup>
								<onclick>PlayMedia($INFO[ListItem.Trailer])</onclick>
								<ondown>SetFocus(50)</ondown>
							</control>
							<control type="togglebutton" id="56105">
								<include>LightGreyButton</include>
								<width>70</width>
								<height>50</height>
								<font>material24</font>
								<label>[B][/B]</label>
								<altlabel>[B][COLOR red][/COLOR][/B]</altlabel>
								<onclick>ToggleWatched</onclick>
								<onup>SetFocus(6666)</onup>
								<ondown>SetFocus(50)</ondown>
								<selected>String.IsEqual(ListItem.Overlay,OverlayWatched.png) | Integer.IsGreaterOrEqual(ListItem.PlayCount,1)</selected>
							</control>
						</control>
						<!-- genre -->
						<include>MetaGenre</include>
						<!-- plot -->
						<control type="textbox">
							<width>100%</width>
							<height>130</height>
							<align>justify</align>
							<aligny>top</aligny>
							<label>$INFO[ListItem.Tagline,[B],[/B][CR]]$INFO[ListItem.Plot]</label>
							<font>Light24</font>
							<shadowcolor>text_shadow</shadowcolor>
							<autoscroll>false</autoscroll>
							<pagecontrol>18</pagecontrol>
						</control>
						<control type="label">
							<height>20</height>
						</control>
						<!-- media flags -->
						<include>MetaFlags</include>
					</control>
					<!-- logo -->
					<include>MetaClearlogo</include>
				</control>
				<control type="group">
					<top>524</top>
					<!-- movies -->
					<include content="PosterWidget">
						<param name="id" value="56"/>
						<param name="onup" value="100"/>
						<param name="ondown" value="200"/>
						<param name="headline" value="$VAR[ContainerContent]"/>
						<param name="sublabel" value=""/>
						<param name="use_custom_content" value="false"/>
						<param name="height">553</param>
						<param name="content_visibility">Container.Content(movies) | Container.Content(tvshows)</param>
						<param name="list_name">$LOCALIZE[20434]</param>
					</include>
				</control>
			</control>
			<!-- Cast -->
			<include content="CastWidget">
				<param name="id" value="200"/>
				<param name="onup" value="56"/>
				<param name="ondown" value="SetProperty(BounceDown,1,home)"/>
				<param name="onback" value="56"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="sublabel" value="$INFO[ListItem.Label2]"/>
				<param name="headline" value="$LOCALIZE[206]"/>
				<param name="content_visibility">Container.Content(movies) | Container.Content(tvshows)</param>
				<param name="content" value="$VAR[View_Cast_Content]"/>
			</include>
		</control>
		<!-- Hidden scrollbar -->
		<control id="18" type="scrollbar">
			<left>-1200</left>
			<width>100</width>
			<height>1</height>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<visible>Control.IsVisible(56)</visible>
		</control>
	</include>
</includes>