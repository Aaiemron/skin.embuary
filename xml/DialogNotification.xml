<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>3</zorder>
	<controls>
		<!-- Hidden Control-->
		<control type="image" id="400">
			<top>-100</top>
			<include>HiddenObject</include>
		</control>
		<!-- Dialog -->
		<control type="group">			
			<include>Dialog_OpenClose</include>
			<right>-50</right>
			<top>-50</top>
			<width>636</width>
			<height>128</height>
			<!-- Background image -->
			<control type="image">
				<left>48</left>
				<top>48</top>
				<width>540</width>
				<height>128</height>
				<texture colordiffuse="panel" border="10">common/dialog_back.png</texture>
			</control>
			<!-- icon -->
			<control type="group">
				<left>54</left>
				<top>54</top>
				<width>116</width>
				<height>116</height>
				<!-- Icon back -->
				<control type="image">
					<width>116</width>
					<height>116</height>
					<texture>dialogs/progress/bg.png</texture>
					<visible>String.StartsWith(Control.GetLabel(400),Default) | String.IsEmpty(Control.GetLabel(400))</visible>
				</control>
				<control type="image">
					<width>116</width>
					<height>116</height>
					<texture>dialogs/progress/bg_circle.png</texture>
					<visible>String.StartsWith(Control.GetLabel(400),Default) | String.IsEmpty(Control.GetLabel(400))</visible>
				</control>
				<!-- Icon -->
				<control type="image">
					<width>116</width>
					<height>116</height>
					<texture>dialogs/icons/info.png</texture>
					<visible>String.IsEmpty(Control.GetLabel(400))</visible>
				</control>
				<control type="image">
					<width>116</width>
					<height>116</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[Control.GetLabel(400)]</texture>
					<visible>String.StartsWith(Control.GetLabel(400),Default)</visible>
				</control>
				<control type="image">
					<left>10</left>
					<top>10</top>
					<width>96</width>
					<height>96</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[Control.GetLabel(400)]</texture>
					<visible>!String.StartsWith(Control.GetLabel(400),Default) + !String.IsEmpty(Control.GetLabel(400))</visible>
				</control>
			</control>
			<control type="group">
				<top>80</top>
				<!-- Heading -->
				<control id="401" type="label">
					<left>182</left>
					<width>388</width>
					<height>64</height>
					<font>Med24</font>
					<textcolor>white</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<!-- Details -->
				<control id="402" type="label">
					<top>34</top>
					<left>182</left>
					<width>388</width>
					<height>64</height>
					<font>Reg22</font>
					<scroll>true</scroll>
					<textcolor>panel_text</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
			</control>
		</control>
	</controls>
</window>
