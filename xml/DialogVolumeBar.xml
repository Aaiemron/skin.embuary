<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>4</zorder>
	<controls>
		<!-- Progress -->
		<control id="404" type="progress">
			<include>HiddenObject</include>
			<info>player.volume</info>
		</control>
		<!-- Dialog -->
		<control type="group">
			<visible>!VideoPlayer.IsFullscreen</visible>
			<include>Dialog_OpenClose</include>
			<width>350</width>
			<height>92</height>
			<right>0</right>
			<!-- Background image -->
			<control type="image">
				<texture colordiffuse="panel" border="10">common/dialog_back.png</texture>
			</control>
			<!-- icon -->
			<control type="group">
				<centertop>50%</centertop>
				<left>10</left>
				<width>80</width>
				<height>80</height>
				<!-- Icon back -->
				<control type="image">
					<texture>dialogs/progress/bg.png</texture>
				</control>
				<control type="image">
					<texture>dialogs/progress/100.png</texture>
					<colordiffuse>thumb_background</colordiffuse>
				</control>
				<control type="image">
					<texture>dialogs/progress/$VAR[VolumeIconCircle].png</texture>	
					<colordiffuse>emby</colordiffuse>
				</control>
				<!-- Icon -->
				<control type="textbox">
					<align>center</align>
					<aligny>center</aligny>
					<font>Material24</font>
					<textcolor>text_white</textcolor>
					<label>$VAR[VolumeIcon]</label>
				</control>
			</control>			
			<!-- Heading -->
			<control type="label">
				<top>15</top>
				<left>100</left>
				<right>20</right>
				<font>Med24</font>
				<textcolor>white</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<label>$LOCALIZE[13376]</label>
			</control>
			<!-- Details -->
			<control type="label">
				<top>50</top>
				<left>100</left>
				<right>20</right>
				<right>10</right>
				<font>Reg22</font>
				<scroll>true</scroll>
				<textcolor>panel_text</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<label>$VAR[VolumeDetails]</label>			
				<visible>!player.passthrough</visible>
			</control>
			<control type="label">
				<top>50</top>
				<left>100</left>
				<right>20</right>
				<right>10</right>
				<font>Reg22</font>
				<scroll>true</scroll>
				<textcolor>panel_text</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<label>$LOCALIZE[29802]</label>
				<visible>player.passthrough</visible>
			</control>
		</control>
	</controls>
</window>