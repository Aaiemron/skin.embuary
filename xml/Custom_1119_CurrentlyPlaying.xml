<?xml version="1.0" encoding="UTF-8"?>
<window id="1119" type="dialog">
	<zorder>99</zorder>	
	<visible>Player.HasMedia + !VideoPlayer.IsFullscreen + !Window.IsVisible(visualisation)</visible>
	<controls>		
			<control type="group">
				<animation effect="slide" start="0,0" end="0,58"  time="200" condition="!System.IdleTime(3)" tween="linear" easing="inout">Conditional</animation>
				<control type="image">
					<height>58</height>
					<width>1920</width>
					<bottom>0</bottom>
					<left>0</left>
					<texture colordiffuse="ff050505">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="grouplist">
					<left>10</left>
					<height>58</height>
					<width>1920</width>
					<bottom>0</bottom>
					<orientation>horizontal</orientation>
					<itemgap>10</itemgap>
					<control type="image">
						<animation effect="slide" end="0,10" time="0" condition="true">Conditional</animation>
						<height>38</height>
						<width>58</width>
						<texture>$INFO[VideoPlayer.Cover]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<height>58</height>
						<width>auto</width>
						<aligny>center</aligny>
						<align>right</align>
						<font>med20</font>
						<textcolor>text_white</textcolor>
						<label>$INFO[Player.Title]</label>
						<visible>Player.HasMedia</visible>
					</control>
				</control>
				<control type="grouplist">
					<bottom>0</bottom>
					<height>58</height>
					<width>400</width>
					<right>19</right>
					<orientation>horizontal</orientation>
					<itemgap>10</itemgap>
					<align>right</align>
					<control type="label">
						<height>58</height>
						<width>auto</width>
						<aligny>center</aligny>
						<font>med20</font>
						<textcolor>text_white</textcolor>
						<label>$VAR[PlayerTimeLabels]</label>
					</control>
					<control type="label">
						<width>25</width>
						<aligny>center</aligny>
						<font>Material24</font>
						<label></label>
						<textcolor>text_white</textcolor>
						<visible>Player.HasMedia + !Player.Paused</visible>
					</control>
					<control type="label">
						<width>25</width>
						<aligny>center</aligny>
						<font>Material24</font>
						<label></label>
						<textcolor>text_white</textcolor>
						<visible>Player.HasMedia + Player.Paused</visible>
					</control>
				</control>
				<control type="progress">
					<bottom>56</bottom>
					<left>0</left>
					<right>0</right>
					<height>2</height>
					<reveal>true</reveal>
					<info>Player.Progress</info>
					<texturebg colordiffuse="grey">common/ProgressBack.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture colordiffuse="emby">common/ProgressBar.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
					<visible>Player.HasMedia</visible>
				</control>
			</control>
	</controls>
</window>