			<width>2130</width>
			<height>100%</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">400</scrolltime>
			<itemgap>-80</itemgap>
			<!-- Meta -->
			<control type="group">
				<width>1920</width>
				<height>960</height>
				<control type="group">
					<top>128</top>
					<height>435</height>
					<width>1920</width>
