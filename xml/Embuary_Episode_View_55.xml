								<height>50</height>
								<font>material24</font>
								<textcolor>white</textcolor>
								<focusedcolor>white</focusedcolor>
								<selectedcolor>white</selectedcolor>
								<shadowcolor>text_shadow</shadowcolor>
								<aligny>center</aligny>
