				<height>162</height>
				<texture colordiffuse="green">items/shadow_button.png</texture>
			</control>
			<control type="image">
				<width>276</width>
				<height>156</height>
				<texture fallback="$PARAM[fallback_image]">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<left>-4</left>
				<top>-4</top>
