<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Common Layout Includes -->
	<include name="widget_headline">
		<param name="top">25</param>
		<definition>
			<control type="label">
				<top>$PARAM[top]</top>
				<left>50</left>
				<width>1000</width>
				<height>87</height>
				<font>Med20</font>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<label>$PARAM[headline]</label>
			</control>
		</definition>
	</include>

	<include name="widget_labels">
		<control type="group">
			<top>$PARAM[top]</top>
			<width>$PARAM[width]</width>
			<control type="label">
				<width>$PARAM[width]</width>
				<label>$PARAM[mainlabel]</label>
				<font>Reg20</font>
				<shadowcolor>text_shadow</shadowcolor>
				<scroll>$PARAM[focused]</scroll>
				<align>center</align>
			</control>
			<control type="label">
				<top>30</top>
				<width>$PARAM[width]</width>
				<label>$PARAM[sublabel]</label>
				<font>Reg18</font>
				<textcolor>lightgrey</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<scroll>$PARAM[focused]</scroll>
				<align>center</align>
			</control>
		</control>
	</include>

	<include name="bubble_overlay">
		<control type="group">
			<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png) | Integer.IsGreater(ListItem.Property(UnWatchedEpisodes),0)</visible>
			<right>10</right>
			<top>10</top>
			<width>44</width>
			<height>44</height>
			<control type="image">
				<width>44</width>
				<height>44</height>
				<texture colordiffuse="emby">items/bubble_small.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label">
				<top>7.5</top>
				<left>1</left>
				<width>44</width>
				<height>44</height>
				<label>$INFO[ListItem.Property(UnWatchedEpisodes)]</label>
				<font>Bold14</font>
				<shadowcolor>text_shadow</shadowcolor>
				<align>center</align>
				<visible>Integer.IsGreater(ListItem.Property(UnWatchedEpisodes),0)</visible>
			</control>
			<control type="label">
				<top>9</top>
				<left>2</left>
				<width>44</width>
				<height>44</height>
				<label></label>
				<font>FontAwesome20Light</font>
				<shadowcolor>text_shadow</shadowcolor>
				<align>center</align>
				<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
			</control>
		</control>
	</include>

	<include name="bubble_play">
		<control type="group">
			<right>10</right>
			<bottom>10</bottom>
			<width>38</width>
			<height>38</height>
			<control type="image">
				<width>38</width>
				<height>38</height>
				<texture colordiffuse="a9000000">items/bubble_mask.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label">
				<top>11</top>
				<left>1</left>
				<width>38</width>
				<height>38</height>
				<label></label>
				<font>FontAwesome14Light</font>
				<shadowcolor>text_shadow</shadowcolor>
				<align>center</align>
			</control>
		</control>
	</include>

	<include name="list_mask">
		<param name="top" default="94"/>
		<param name="width" default="145"/>
		<definition>
			<control type="group">
				<visible>Container($PARAM[id]).HasNext + Control.HasFocus($PARAM[id])</visible>
				<animation effect="fade" start="0" end="100" time="200" tween="sine">Visible</animation>
				<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
				<control type="image">
					<top>$PARAM[top]</top>
					<right>0</right>
					<width>$PARAM[width]</width>
					<height>$PARAM[height]</height>
					<texture>items/listmask.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="label">
					<top>$PARAM[top]</top>
					<right>0</right>
					<width>55</width>
					<height>$PARAM[height]</height>
					<label></label>
					<font>FontAwesome50bold</font>
					<shadowcolor>text_shadow</shadowcolor>
					<align>center</align>					
					<aligny>center</aligny>
				</control>
			</control>
		</definition>
	</include>


	<include name="WidgetSpacer">
		<param name="visible">true</param>
		<param name="height">200</param>
		<definition>
			<control type="label" id="$PARAM[id]">
				<width>1</width>
				<height>$PARAM[height]</height>
				<texturefocus />
				<texturenofocus />
				<label/>
				<font/>
				<visible>$PARAM[visible]</visible>
			</control>
		</definition>
	</include>

	<include name="progress">
		<param name="visible">true</param>
		<param name="width">100</param>
		<param name="height">2</param>
		<param name="top">0</param>
		<param name="left">0</param>
		<definition>
			<control type="progress">
				<top>$PARAM[top]</top>
				<left>$PARAM[left]</left>
				<width>$PARAM[width]</width>
				<height>$PARAM[height]</height>
				<texturebg colordiffuse="black" border="2">common/ProgressBack.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="emby"  border="2">common/ProgressBar.png</midtexture>
				<righttexture>-</righttexture>
				<info>ListItem.Progress</info>
				<visible>$PARAM[visible]</visible>
			</control>
		</definition>
	</include>


	<!-- Poster -->
	<include name="PosterLayout">
		<param name="mainlabel">$INFO[ListItem.Title]</param>
		<param name="sublabel">$INFO[ListItem.TVShowTitle]</param>
		<param name="focused">false</param>
		<param name="visible">true</param>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<control type="image">
					<top>-2</top>
					<left>-2</left>
					<width>283</width>
					<height>421</height>
					<texture>items/shadow_poster.png</texture>
				</control>
				<control type="image">
					<width>277</width>
					<height>415</height>
					<texture colordiffuse="green" scalediffuse="false" diffuse="items/mask_poster.png">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
					<visible>String.IsEmpty(ListItem.Art(poster))</visible>
				</control>
				<control type="image">
					<width>277</width>
					<height>415</height>
					<texture fallback="$PARAM[fallback_image]" scalediffuse="false" diffuse="items/mask_poster.png" background="true">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="group">
					<width>277</width>
					<height>415</height>
					<include>bubble_overlay</include>
					<include content="bubble_play">
						<param name="top" value="367"/>
					</include>
				</control>
				<control type="progress">
					<top>410</top>
					<width>277</width>
					<height>5</height>
					<texturebg border="2">views/ProgressBack.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="2">views/ProgressBar.png</midtexture>
					<righttexture>-</righttexture>
					<info>ListItem.PercentPlayed</info>
					<visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
				</control>
				<control type="image">
					<left>-12</left>
					<top>-7</top>
					<width>301</width>
					<height>439</height>
					<texture colordiffuse="focused">items/focus_poster.png</texture>
					<aspectratio>scale</aspectratio>
					<visible>$PARAM[focused] + Control.HasFocus($PARAM[id])</visible>
					<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
				</control>
				<include content="widget_labels">
					<param name="top">427</param>
					<param name="width">277</param>
					<param name="mainlabel">$PARAM[mainlabel]</param>
					<param name="sublabel">$PARAM[sublabel]</param>
					<param name="focused">$PARAM[focused]</param>
				</include>
			</control>
		</definition>
	</include>
