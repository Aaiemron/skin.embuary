				<height>262</height>
				<texture>items/shadow_wide.png</texture>
			</control>
			<control type="image">
				<width>455</width>
				<height>256</height>
				<texture fallback="$PARAM[fallback_image]" scalediffuse="false" diffuse="items/mask_wide.png" background="true">$VAR[IconLandscape]</texture>
