			</control>
			<control type="image">
				<left>-4</left>
				<top>-4</top>
				<width>463</width>
				<height>264</height>
				<texture colordiffuse="green">items/focus_wide.png</texture>
				<aspectratio>scale</aspectratio>
				<visible>$PARAM[focused]</visible>
				<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
			</control>
			<control type="label">
				<top>178</top>
				<width>455</width>
				<label>$PARAM[thumb_label]</label>
				<font>font20_title</font>
				<shadowcolor>text_shadow</shadowcolor>
				<align>center</align>
			</control>
			<control type="image">
				<left>20</left>
				<top>175</top>
				<width>32</width>
				<height>32</height>
				<texture>$VAR[WallWatchedIconVar]</texture>
			</control>
			<control type="group">
				<visible>!Window.IsActive(videos)</visible>
				<control type="label">
					<top>261</top>
					<width>455</width>
					<label>$PARAM[main_label]</label>
					<font>font12</font>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
				<control type="label">
					<top>291</top>
					<width>455</width>
					<label>$PARAM[sub_label]</label>
					<font>font9</font>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
			</control>
			<control type="progress">
				<top>251</top>
				<width>455</width>
				<height>5</height>
				<texturebg colordiffuse="black" border="2">common/ProgressBack.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="emby"  border="2">common/ProgressBar.png</midtexture>
				<righttexture>-</righttexture>
				<info>ListItem.Progress</info>
			</control>
			<control type="group">
				<left>134</left>
				<top>8</top>
				<include>UserRatingCircle</include>
			</control>
		</definition>
	</include>

	<!-- Square -->
	<include name="SquareLayout">
		<param name="main_label">$INFO[ListItem.Title]</param>
		<param name="sub_label">$INFO[ListItem.TVShowTitle]</param>
		<param name="fallback_image">DefaultTVShows.png</param>
		<param name="focused">false</param>
		<definition>
			<control type="image">
				<top>-2</top>
				<left>-2</left>
				<width>283</width>
				<height>283</height>
				<texture>items/shadow_square.png</texture>
			</control>
			<control type="image">
				<width>277</width>
				<height>277</height>
				<texture fallback="$PARAM[fallback_image]" scalediffuse="true" diffuse="items/mask_square.png" background="true">$VAR[IconSquare]</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<include content="progress">
				<param name="top" value="273"/>
				<param name="width" value="277"/>
				<param name="visible" value="!Integer.IsEqual(ListItem.PercentPlayed,0) | String.StartsWith(ListItem.Path,pvr://)"/>
			</include>
			<control type="image">
				<left>-4</left>
				<top>-4</top>
				<width>285</width>
				<height>285</height>
				<texture colordiffuse="green">items/focus_square.png</texture>
				<aspectratio>scale</aspectratio>
				<visible>$PARAM[focused]</visible>
				<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
			</control>
			<control type="label">
				<top>178</top>
				<width>277</width>
				<label>$PARAM[thumb_label]</label>
				<font>font20_title</font>
				<shadowcolor>text_shadow</shadowcolor>
				<align>center</align>
			</control>
			<control type="image">
				<left>20</left>
				<top>175</top>
				<width>32</width>
				<height>32</height>
				<texture>$VAR[WallWatchedIconVar]</texture>
			</control>
			<control type="group">
				<visible>!Window.IsActive(videos)</visible>
				<control type="label">
					<top>282</top>
					<width>277</width>
					<label>$PARAM[main_label]</label>
					<font>font12</font>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
				<control type="label">
					<top>312</top>
					<width>277</width>
					<label>$PARAM[sub_label]</label>
					<font>font9</font>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>$PARAM[focused]</scroll>
					<align>center</align>
				</control>
			</control>
		</definition>
	</include>

	<!-- Button -->
