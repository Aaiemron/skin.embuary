<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<views>50,52,53</views>
	<menucontrol>9999</menucontrol>
	<controls>
		<control type="button" id="2">
			<include>HiddenObject</include>
		</control>
		<control type="label" id="29">
			<include>HiddenObject</include>
		</control>
		<include content="Background"/>
		<control type="group">	
			<include>Window_OpenClose</include>
			<include content="Wide_View_50">
				<param name="mainlabel">$INFO[ListItem.Label]$INFO[ListItem.Episodename, - ]</param>
				<param name="thumblabel">$INFO[ListItem.Channelname]</param>
			</include>
			<include content="Square_View_52">
				<param name="mainlabel">$INFO[ListItem.Label]</param>
				<param name="sublabel">$INFO[ListItem.Episodename]</param>
				<param name="thumblabel">$INFO[ListItem.Channelname]</param>
			</include>
			<include content="List_View_53">
				<param name="mainlabel">$INFO[ListItem.Label]</param>
				<param name="sublabel">$INFO[ListItem.Episodename]</param>
				<param name="thumblabel">$INFO[ListItem.Label]</param>
				<param name="rightlabel">$VAR[ListItemDuration]</param>
				<param name="rightlabel2">$INFO[ListItem.Date]</param>
			</include>
			<control type="group">
				<visible>!Control.IsVisible(54) + !Control.IsVisible(55)</visible>
				<animation effect="slide" start="0,0" end="0,-14" time="0" condition="Control.IsVisible(50)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,5" time="0" condition="Control.IsVisible(52)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,-18" time="0" condition="Control.IsVisible(53)">Conditional</animation>
				<top>93</top>
				<width>1920</width>
				<height>40</height>
				<control type="group">
					<include content="JumpToLetter">
						<param name="visible" value="[Container.HasNext | Container.HasPrevious] + $EXP[ExpJumpToLetter]"/>
					</include>
				</control>
				<control type="label">
					<visible>![Container.HasNext | Container.HasPrevious] | !$EXP[ExpJumpToLetter]</visible>
					<centerleft>50%</centerleft>
					<width>1215</width>
					<height>40</height>
					<font>Med18</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>softgrey</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
					<label>$INFO[Container.SortMethod,$LOCALIZE[581] ","]$INFO[Container.SortOrder, / $LOCALIZE[580] ","]</label>
				</control>
			</control>
		</control>
		<!-- Menu control -->
		<control type="group">
			<include>FullscreenDimensions</include>
			<include content="DiffuseMask">
				<param name="visible">ControlGroup(4000).HasFocus</param>
			</include>
			<control type="group">
				<visible>ControlGroup(4000).HasFocus</visible>
				<include>Visible_PopupOpenClose</include>
				<centerleft>50%</centerleft>
				<width>284</width>
				<centertop>50%</centertop>
				<height>970</height>
				<control type="grouplist" id="4000">
					<orientation>vertical</orientation>
					<height>auto</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<onright>50</onright>
					<onleft>50</onleft>
					<onback>50</onback>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image">
						<width>100%</width>
						<height>10</height>
						<texture colordiffuse="panel">common/menu_top.png</texture>
					</control>
					<control type="togglebutton" id="4">
						<include content="CommonButton"/>
						<label>$LOCALIZE[580]: $LOCALIZE[584]</label>
						<altlabel>$LOCALIZE[580]: $LOCALIZE[585]</altlabel>
					</control>
					<control type="button" id="3">
						<include content="CommonButton"/>
					</control>
					<control type="radiobutton" id="5">
						<include content="CommonButton"/>
						<label>$LOCALIZE[31031]</label>
						<label2></label2>
					</control>
					<control type="radiobutton" id="7">
						<include content="CommonButton"/>
						<label>$LOCALIZE[31032]</label>
						<label2></label2>
					</control>
					<control type="image">
						<width>100%</width>
						<height>10</height>
						<texture colordiffuse="panel">common/menu_bottom.png</texture>
					</control>
				</control>
			</control>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">		
			<param name="id">50</param>
			<param name="enabled">false</param>
			<param name="sidebar_id">9999</param>
			<param name="custom_animation">[Container(540).HasPrevious | Container(550).HasPrevious]</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</controls>
</window>
