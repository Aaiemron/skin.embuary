<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Wide_View_50">
		<param name="mainlabel">$VAR[MainListLabel]</param>
		<param name="sublabel">$VAR[SubListLabel]</param>
		<definition>
			<control type="group">
				<include>Visible_OpenClose</include>
				<visible>Control.IsVisible(50)</visible>
				<animation condition="Integer.IsGreater(Container(50).NumItems,6) + Integer.IsLess(Container(50).NumItems,10)" effect="slide" start="0,0" end="222,0">Conditional</animation>
				<animation condition="Integer.IsGreater(Container(50).NumItems,3) + Integer.IsLess(Container(50).NumItems,7)" effect="slide" start="0,0" end="444,0">Conditional</animation>
				<animation condition="Integer.IsLess(Container(50).NumItems,4)" effect="slide" start="0,0" end="666,0">Conditional</animation>
				<!-- wide -->
				<control id="50" type="panel">
					<visible>!Container.Content(seasons) + !Container.Content(episodes)</visible>
					<top>77</top>
					<width>1920</width>
					<height>1080</height>
					<onup condition="Control.IsVisible(7000)">SetFocus(7000)</onup>
					<onup condition="!Control.IsVisible(7000)">SetFocus(6666)</onup>
					<ondown>noop</ondown>
					<onleft>9999</onleft>
					<onright>noop</onright>
					<scrolltime>200</scrolltime>
					<movement>2</movement>
					<orientation>horizontal</orientation>
					<preloaditems>4</preloaditems>
					<defaultcontrol always="true">0</defaultcontrol>
					<viewtype label="$LOCALIZE[31004]">panel</viewtype>
					<pagecontrol>17</pagecontrol>
					<itemlayout width="444" height="305">
						<control type="group">
							<left>82</left>
							<top>64</top>
							<include content="LandscapeLayout">
								<param name="mainlabel" value="$PARAM[mainlabel]" />
								<param name="sublabel" value="" />
								<param name="thumblabel" value="$PARAM[thumblabel]" />
								<param name="focused" value="false" />
								<param name="id" value="50" />
							</include>
						</control>
					</itemlayout>
					<focusedlayout width="444" height="305">
						<include>SetPropertyOnFocus</include>
						<control type="group">							
							<left>82</left>
							<top>64</top>
							<include content="LandscapeLayout">
								<param name="mainlabel" value="$PARAM[mainlabel]" />
								<param name="sublabel" value="" />
								<param name="thumblabel" value="$PARAM[thumblabel]" />
								<param name="focused" value="true" />
								<param name="id" value="50" />
							</include>
						</control>
					</focusedlayout>
				</control>
				<include content="list_mask">
					<param name="height" value="1022"/>
					<param name="width" value="75"/>
					<param name="top" value="58"/>
					<param name="id" value="50"/>
					<param name="visible_forced" value="true"/>
				</include>
				<include content="ScrollbarHorizontal"/>
			</control>
		</definition>
	</include>
</includes>