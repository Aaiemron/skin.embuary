<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<views>51,50</views>
	<menucontrol>9000</menucontrol>
	<controls>

		<!--<include>View_50_List</include>-->

		
		<control type="group">
			<visible>Control.IsVisible(51)</visible>
			<include content="JumpToLetter">
				<param name="top">85</param>
				<param name="left">120</param>
			</include>
			<!-- poster -->
			<control id="51" type="panel">
				<top>100</top>
				<width>1920</width>
				<height>950</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>9999</onleft>
				<onright>noop</onright>
				<scrolltime>200</scrolltime>
				<movement>2</movement>
				<orientation>horizontal</orientation>
				<preloaditems>4</preloaditems>
				<defaultcontrol always="true">0</defaultcontrol>
				<viewtype label="535">panel</viewtype>
				<visible>true</visible>
				<itemlayout width="297" height="435">
					<control type="group">
						<left>55</left>
						<top>64</top>
						<include content="PosterLayout">
							<param name="mainlabel" value="$PARAM[mainlabel]" />
							<param name="sublabel" value="$PARAM[sublabel]" />
							<param name="focused" value="false" />
							<param name="id" value="51" />
						</include>
					</control>
				</itemlayout>
				<focusedlayout width="297" height="435">
					<control type="group">							
						<left>55</left>
						<top>64</top>
						<include content="PosterLayout">
							<param name="mainlabel" value="$PARAM[mainlabel]" />
							<param name="sublabel" value="$PARAM[sublabel]" />
							<param name="focused" value="true" />
							<param name="id" value="51" />
						</include>
					</control>
				</focusedlayout>
			</control>
		</control>

		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<!-- Thumb image -->
			<control type="group">
				<left>55</left>
				<top>150</top>
				<include content="SquareLayout">
					<param name="visible">!Container.Content(movies) + !Container.Content(tvshows)</param>
				</include>
				<include content="LandscapeLayout">
					<param name="visible">Container.Content(tvshows)</param>
				</include>
				<include content="PosterLayout">
					<param name="visible">Container.Content(movies)</param>
				</include>
				<control type="image">
					<top>48</top>
					<width>480</width>
					<height>600</height>
					<aspectratio align="center">scale</aspectratio>
					<texture background="true" fallback="DefaultAlbumCover.png">$INFO[ListItem.Icon]</texture>
					<visible>false</visible>
				</control>
			</control>
			<!-- Title -->
			<control type="group">
				<left>600</left>
				<top>145</top>
				<control type="label">
					<width>840</width>
					<height>48</height>
					<font>Med48</font>
					<label>$INFO[Container.Foldername]</label>
				</control>
				<control type="label">
					<top>57</top>
					<width>840</width>
					<height>32</height>
					<font>Med32</font>
					<label>Subline</label>
				</control>
			</control>
			<!-- List -->
			<control id="50" type="list">
				<left>600</left>
				<top>292</top>
				<width>1000</width>
				<height>900</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>9999</onleft>
				<onright>noop</onright>
				<defaultcontrol always="true">0</defaultcontrol>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime>0</scrolltime>
				<visible>true</visible>
				<itemlayout height="101" width="1000">
					<control type="group">
						<control type="label">
							<width>500</width>
							<height>31</height>
							<font>Light32</font>
							<textcolor>ff636466</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<width>500</width>
							<height>31</height>
							<align>right</align>
							<font>Light32</font>
							<textcolor>ff636466</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="101" width="1000">
					<control type="group">
						<control type="label">
							<width>500</width>
							<height>31</height>
							<font>Light32</font>
							<textcolor>emby</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>

		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">10</param>
			<param name="sidebar_id">9999</param>
		</include>
		<!-- diffuse -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="88000000">common/white.jpg</texture>
			<aspectratio>stretch</aspectratio>
			<visible>false</visible>
			<visible>!ControlGroup(50).HasFocus + !ControlGroup(6666).HasFocus</visible>
			<include>Visible_Fade</include>
		</control>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</controls>
</window>
