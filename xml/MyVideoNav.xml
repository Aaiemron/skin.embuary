<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">51</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<views>52,51</views>
	<menucontrol>9000</menucontrol>
	<controls>

		
		<include content="Background">
			<param name="id" value="$VAR[VisibleContainer]"/>
		</include>

		<control type="group">
			<animation effect="slide" start="0,0" end="0,-10" time="0" condition="Control.IsVisible(52)">Conditional</animation>
			<top>88</top>
			<width>1920</width>
			<height>40</height>
			<control type="group">
				<visible>[Container.HasNext | Container.HasPrevious] + $EXP[ExpJumpToLetter]</visible>
				<include content="JumpToLetter"/>
			</control>
			<control type="label">
				<visible>![Container.HasNext | Container.HasPrevious] | !$EXP[ExpJumpToLetter]</visible>
				<centerleft>50%</centerleft>
				<width>1215</width>
				<height>40</height>
				<font>Med18</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>softgrey</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<label>$INFO[Container.SortMethod,$LOCALIZE[581] ","]$INFO[Container.SortOrder, / $LOCALIZE[580] ","]</label>
			</control>
		</control>

		<!-- wide -->
		<control type="group">
			<visible>Control.IsVisible(52)</visible>
			<animation condition="Integer.IsGreater(Container(52).NumItems,6) + Integer.IsLess(Container(52).NumItems,10)" effect="slide" start="0,0" end="225,0">Conditional</animation>
			<animation condition="Integer.IsGreater(Container(52).NumItems,3) + Integer.IsLess(Container(52).NumItems,7)" effect="slide" start="0,0" end="450,0">Conditional</animation>
			<animation condition="Integer.IsLess(Container(52).NumItems,4)" effect="slide" start="0,0" end="675,0">Conditional</animation>
			<!-- poster -->
			<control id="52" type="panel">
				<top>80</top>
				<width>1920</width>
				<height>1080</height>
				<onup>SetFocus(7000)</onup>
				<ondown>noop</ondown>
				<onleft>9999</onleft>
				<onright>noop</onright>
				<scrolltime>200</scrolltime>
				<movement>2</movement>
				<orientation>horizontal</orientation>
				<preloaditems>4</preloaditems>
				<defaultcontrol always="true">0</defaultcontrol>
				<viewtype label="535">panel</viewtype>
				<pagecontrol>17</pagecontrol>
				<visible>true</visible>
				<itemlayout width="450" height="305">
					<control type="group">
						<left>70</left>
						<top>64</top>
						<include content="LandscapeLayoutSmall">
							<param name="mainlabel" value="$VAR[MainListLabel]" />
							<param name="sublabel" value="" />
							<param name="focused" value="false" />
							<param name="id" value="52" />
						</include>
					</control>
				</itemlayout>
				<focusedlayout width="450" height="305">
					<control type="group">							
						<left>70</left>
						<top>64</top>
						<include content="LandscapeLayoutSmall">
							<param name="mainlabel" value="$VAR[MainListLabel]" />
							<param name="sublabel" value="" />
							<param name="focused" value="true" />
							<param name="id" value="52" />
						</include>
					</control>
				</focusedlayout>
			</control>			
			<include content="list_mask">
				<param name="height" value="1080"/>
				<param name="width" value="75"/>
				<param name="top" value="25"/>
				<param name="id" value="52"/>
			</include>
		</control>

		<!-- Poster -->
		<control type="group">
			<visible>Control.IsVisible(51)</visible>
			<animation condition="Integer.IsGreaterOrEqual(Container(51).NumItems,11) + Integer.IsLessOrEqual(Container(51).NumItems,12)" effect="slide" start="0,0" end="128,0">Conditional</animation>
			<animation condition="Integer.IsGreaterOrEqual(Container(51).NumItems,9) + Integer.IsLessOrEqual(Container(51).NumItems,10)" effect="slide" start="0,0" end="257,0">Conditional</animation>
			<animation condition="Integer.IsGreaterOrEqual(Container(51).NumItems,7) + Integer.IsLessOrEqual(Container(51).NumItems,8)" effect="slide" start="0,0" end="385,0">Conditional</animation>
			<animation condition="Integer.IsGreaterOrEqual(Container(51).NumItems,5) + Integer.IsLessOrEqual(Container(51).NumItems,6)" effect="slide" start="0,0" end="514,0">Conditional</animation>
			<animation condition="Integer.IsGreaterOrEqual(Container(51).NumItems,3) + Integer.IsLessOrEqual(Container(51).NumItems,4)" effect="slide" start="0,0" end="642,0">Conditional</animation>
			<animation condition="Integer.IsLessOrEqual(Container(51).NumItems,2)" effect="slide" start="0,0" end="771,0">Conditional</animation>
			<!-- poster -->
			<control id="51" type="panel">
				<top>100</top>
				<width>auto</width>
				<height>1080</height>
				<onup>SetFocus(7000)</onup>
				<ondown>noop</ondown>
				<onleft>9999</onleft>
				<onright>noop</onright>
				<scrolltime>200</scrolltime>
				<movement>2</movement>
				<orientation>horizontal</orientation>
				<preloaditems>4</preloaditems>
				<defaultcontrol always="true">0</defaultcontrol>
				<viewtype label="535">panel</viewtype>
				<pagecontrol>17</pagecontrol>
				<visible>true</visible>
				<itemlayout width="257" height="445">
					<control type="group">
						<left>70.5</left>
						<top>64</top>
						<include content="PosterLayoutSmall">
							<param name="mainlabel" value="$VAR[MainListLabel]" />
							<param name="sublabel" value="$VAR[SubListLabel]" />
							<param name="focused" value="false" />
							<param name="id" value="51" />
						</include>
					</control>
				</itemlayout>
				<focusedlayout width="257" height="445">
					<control type="group">							
						<left>70.5</left>
						<top>64</top>
						<include content="PosterLayoutSmall">
							<param name="mainlabel" value="$VAR[MainListLabel]" />
							<param name="sublabel" value="$VAR[SubListLabel]" />
							<param name="focused" value="true" />
							<param name="id" value="51" />
						</include>
					</control>
				</focusedlayout>
			</control>			
			<include content="list_mask">
				<param name="height" value="1080"/>
				<param name="width" value="75"/>
				<param name="top" value="25"/>
				<param name="id" value="51"/>
			</include>
		</control>

		<control type="group">
			<visible>false</visible>
			<visible>Control.IsVisible(50)</visible>
			<!-- Thumb image -->
			<control type="group">
				<left>55</left>
				<top>150</top>
				<include content="SquareLayout">
					<param name="visible">!Container.Content(movies) + !Container.Content(tvshows)</param>
				</include>
				<include content="LandscapeLayout">
					<param name="visible">Container.Content(tvshows)</param>
				</include>
				<include content="PosterLayout">
					<param name="visible">Container.Content(movies)</param>
				</include>
				<control type="image">
					<top>48</top>
					<width>480</width>
					<height>600</height>
					<aspectratio align="center">scale</aspectratio>
					<texture background="true" fallback="DefaultAlbumCover.png">$INFO[ListItem.Icon]</texture>
					<visible>false</visible>
				</control>
			</control>
			<!-- Title -->
			<control type="group">
				<left>600</left>
				<top>145</top>
				<control type="label">
					<width>840</width>
					<height>48</height>
					<font>Med48</font>
					<label>$INFO[Container.Foldername]</label>
				</control>
				<control type="label">
					<top>57</top>
					<width>840</width>
					<height>32</height>
					<font>Med32</font>
					<label>Subline</label>
				</control>
			</control>
			<!-- List -->
			<control id="50" type="list">
				<left>600</left>
				<top>292</top>
				<width>1000</width>
				<height>900</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>9999</onleft>
				<onright>noop</onright>
				<defaultcontrol always="true">0</defaultcontrol>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime>0</scrolltime>
				<visible>true</visible>
				<itemlayout height="101" width="1000">
					<control type="group">
						<control type="label">
							<width>500</width>
							<height>31</height>
							<font>Light32</font>
							<textcolor>ff636466</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<width>500</width>
							<height>31</height>
							<align>right</align>
							<font>Light32</font>
							<textcolor>ff636466</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="101" width="1000">
					<control type="group">
						<control type="label">
							<width>500</width>
							<height>31</height>
							<font>Light32</font>
							<textcolor>emby</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>

		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">51</param>
			<param name="enabled">false</param>
			<param name="sidebar_id">9999</param>
		</include>
		<control type="scrollbar" id="17">
			<left>0</left>
			<bottom>0</bottom>
			<width>1920</width>
			<height>5</height>
			<visible>true</visible>
			<texturesliderbackground colordiffuse="black">common/ProgressBack.png</texturesliderbackground>
			<texturesliderbar colordiffuse="emby">common/ProgressBar.png</texturesliderbar>
			<texturesliderbarfocus/>
			<textureslidernib/>
			<textureslidernibfocus/>
			<orientation>horizontal</orientation>
			<showonepage>false</showonepage>
		</control>
		<!-- diffuse -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="88000000">common/white.jpg</texture>
			<aspectratio>stretch</aspectratio>
			<visible>!Control.HasFocus(51) + !Control.HasFocus(52) + !ControlGroup(6666).HasFocus + !Control.HasFocus(7000)</visible>
			<include>Visible_Fade</include>
		</control>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">51</param>
		</include>
	</controls>
</window>
