<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<views>50,51,52,53,54,55</views>
	<menucontrol>9999</menucontrol>
	<!--<onunload>ClearProperty(TVShowRating,home)</onunload>
	<onunload>ClearProperty(TVShowDBID,home)</onunload>
	<onunload>ClearProperty(TVShowPremiered,home)</onunload>
	<onunload>ClearProperty(TVShowOverlay,home)</onunload>
	<onunload>ClearProperty(TVShowTotalSeasons,home)</onunload>
	<onunload>ClearProperty(TVShowTotalEpisodes,home)</onunload>-->
	<controls>
		<control type="button" id="2">
			<include>HiddenObject</include>
		</control>
		<include>Background</include>

		<control type="group">			
			<include>Window_OpenClose</include>

			<include>Wide_View_50</include>
			<include>Poster_View_51</include>
			<include>Square_View_52</include>
			<include>List_View_53</include>
			<include>Season_View_54</include>
			<include>Episode_View_55</include>

			<control type="group">
				<visible>!Control.IsVisible(54) + !Control.IsVisible(55)</visible>
				<animation effect="slide" start="0,0" end="0,-14" time="0" condition="Control.IsVisible(50)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,5" time="0" condition="Control.IsVisible(52)">Conditional</animation>
				<top>93</top>
				<width>1920</width>
				<height>40</height>
				<control type="group">
					<include content="JumpToLetter">
						<param name="visible" value="[Container.HasNext | Container.HasPrevious] + $EXP[ExpJumpToLetter]"/>
					</include>
				</control>
				<control type="label">
					<visible>![Container.HasNext | Container.HasPrevious] | !$EXP[ExpJumpToLetter]</visible>
					<centerleft>50%</centerleft>
					<width>1215</width>
					<height>40</height>
					<font>Med18</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>softgrey</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
					<label>$INFO[Container.SortMethod,$LOCALIZE[581] ","]$INFO[Container.SortOrder, / $LOCALIZE[580] ","]</label>
				</control>
			</control>

		</control>

		<!-- Menu control -->
		<control type="group">
			<visible>ControlGroup(4000).HasFocus</visible>
			<include>FullscreenDimensions</include>
			<include>Visible_PopupOpenClose</include>
			<include content="DiffuseMask">
				<param name="visible">true</param>
			</include>
			<control type="group">
				<centerleft>50%</centerleft>
				<width>284</width>
				<centertop>50%</centertop>
				<height>970</height>
				<control type="grouplist" id="4000">
					<orientation>vertical</orientation>
					<height>auto</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<onright>50</onright>
					<onleft>50</onleft>
					<onback>50</onback>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image">
						<width>100%</width>
						<height>10</height>
						<texture colordiffuse="panel">common/menu_top.png</texture>
					</control>
					<control type="button" id="10">
						<include content="CommonButton"/>
						<label>$LOCALIZE[341]</label>
					</control>
					<control type="togglebutton" id="4">
						<include content="CommonButton"/>
						<label>$LOCALIZE[580]: $LOCALIZE[584]</label>
						<altlabel>$LOCALIZE[580]: $LOCALIZE[585]</altlabel>
					</control>
					<control type="button" id="3">
						<include content="CommonButton"/>
					</control>
					<control type="button" id="5">
						<include content="CommonButton"/>
						<label>Switch to file mode</label>
						<visible>false</visible>
					</control>
					<control type="button" id="6">
						<include content="CommonButton"/>
						<label>$LOCALIZE[341]</label>
						<visible>System.HasMediaDVD</visible>
					</control>
					<control type="button" id="11">
						<include content="CommonButton"/>
						<label>Unlock shares</label>
						<visible>false</visible>
					</control>
					<control type="button" id="19">
						<include content="CommonButton"/>
						<label>$LOCALIZE[31008]</label>
					</control>
					<control type="image">
						<width>100%</width>
						<height>10</height>
						<texture colordiffuse="panel">common/menu_bottom.png</texture>
					</control>
				</control>
			</control>
		</control>

		<!-- header bar -->
		<include content="HeaderBar">		
			<param name="id">50</param>
			<param name="enabled">false</param>
			<param name="sidebar_id">9999</param>
			<param name="custom_animation">[[Control.IsVisible(54) + Container(540).HasPrevious]] | [Control.IsVisible(55) + Container(550).HasPrevious]</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</controls>
</window>
