<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<views>50,51,52,53,54,55</views>
	<menucontrol>9000</menucontrol>
	<!--<onunload>ClearProperty(TVShowRating,home)</onunload>
	<onunload>ClearProperty(TVShowDBID,home)</onunload>
	<onunload>ClearProperty(TVShowPremiered,home)</onunload>
	<onunload>ClearProperty(TVShowOverlay,home)</onunload>
	<onunload>ClearProperty(TVShowTotalSeasons,home)</onunload>
	<onunload>ClearProperty(TVShowTotalEpisodes,home)</onunload>-->
	<controls>

		
		<include content="Background">
			<param name="id" value="$VAR[VisibleContainer]"/>
		</include>


	

		<include>Wide_View_50</include>
		<include>Poster_View_51</include>
		<include>Square_View_52</include>
		<include>List_View_53</include>
		<include>Season_View_54</include>
		<include>Episode_View_55</include>

		<control type="group">
			<visible>!Control.IsVisible(54) + !Control.IsVisible(55)</visible>
			<animation effect="slide" start="0,0" end="0,-14" time="0" condition="Control.IsVisible(50)">Conditional</animation>
			<animation effect="slide" start="0,0" end="0,5" time="0" condition="Control.IsVisible(52)">Conditional</animation>
			<top>93</top>
			<width>1920</width>
			<height>40</height>
			<control type="group">
				<include content="JumpToLetter">
					<param name="visible" value="[Container.HasNext | Container.HasPrevious] + $EXP[ExpJumpToLetter]"/>
				</include>
			</control>
			<control type="label">
				<visible>![Container.HasNext | Container.HasPrevious] | !$EXP[ExpJumpToLetter]</visible>
				<centerleft>50%</centerleft>
				<width>1215</width>
				<height>40</height>
				<font>Med18</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>softgrey</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<label>$INFO[Container.SortMethod,$LOCALIZE[581] ","]$INFO[Container.SortOrder, / $LOCALIZE[580] ","]</label>
			</control>
		</control>



		<!-- header bar -->
		<include content="HeaderBar">		
			<param name="id">51</param>
			<param name="enabled">false</param>
			<param name="sidebar_id">9999</param>
			<param name="custom_animation">[Container(540).HasPrevious | Container(550).HasPrevious]</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</controls>
</window>
