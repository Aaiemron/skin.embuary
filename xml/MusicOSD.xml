<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload>Dialog.Close(fullscreeninfo)</onload>
	<defaultcontrol always="true">603</defaultcontrol>
	<controls>
		<!--Bottom-->
		<control type="group" id="1">
			<bottom>0</bottom>
			<control type="grouplist" id="600">
				<orientation>horizontal</orientation>
				<height>50</height>
				<bottom>30</bottom>
				<left>298</left>
				<right>20</right>
				<itemgap>5</itemgap>
				<control type="button" id="601">
					<include content="PlayerButtons">
						<param name="type" value="previous"/>
					</include>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<control type="button" id="602">
					<include content="PlayerButtons">
						<param name="type" value="rewind"/>
					</include>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<control type="togglebutton" id="603">
					<alttexturenofocus>icons/player/pause_nf.png</alttexturenofocus>
					<alttexturefocus colordiffuse="emby">icons/player/pause_fo.png</alttexturefocus>
					<include content="PlayerButtons">
						<param name="type" value="play"/>
					</include>
					<selected>!Player.Paused + !Player.Forwarding + !Player.Rewinding + !Player.Seeking</selected>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<control type="button" id="604">
					<include content="PlayerButtons">
						<param name="type" value="stop"/>
					</include>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<control type="button" id="605">
					<include content="PlayerButtons">
						<param name="type" value="forward"/>
					</include>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<control type="button" id="606">
					<include content="PlayerButtons">
						<param name="type" value="next"/>
					</include>
					<onclick>PlayerControl(Next)</onclick>
				</control>
				<control type="togglebutton" id="611">
					<include content="PlayerButtons">
						<param name="type" value="shuffle"/>
					</include>
					<selected>Playlist.IsRandom</selected>
					<onclick>PlayerControl(random)</onclick>
				</control>
				<control type="group" id="612">
					<width>50</width>
					<heigth>50</heigth>
					<control type="image">
						<texture colordiffuse="$VAR[PlaylistRepeatButtonColor]">$VAR[PlaylistRepeatButtonTexture]</texture>
					</control>
					<control type="togglebutton" id="613">
						<texturenofocus>-</texturenofocus>
						<texturefocus>-</texturefocus>
						<alttexturenofocus>-</alttexturenofocus>
						<alttexturefocus>-</alttexturefocus>
						<onleft>611</onleft>
						<onright>614</onright>
						<onclick>PlayerControl(Repeat)</onclick>
					</control>
				</control>
				<control type="button" id="614">
					<include content="PlayerButtons">
						<param name="type" value="playlist"/>
					</include>
					<onclick>close</onclick>
					<onclick>ActivateWindow(musicplaylist)</onclick>
					<visible>Integer.IsGreater(MusicPlayer.PlaylistLength,0)</visible>
				</control>
				<control type="button" id="615">
					<include content="PlayerButtons">
						<param name="type" value="config"/>
					</include>
					<onclick>SetProperty(Dialog.NumItems,3)</onclick>
					<onclick>SetProperty(Dialog.1.Label,$LOCALIZE[13395])</onclick>
					<onclick>SetProperty(Dialog.1.BuiltIn,ActivateWindow(visualisationpresetlist))</onclick>
					<onclick>SetProperty(Dialog.2.Label,$LOCALIZE[31039])</onclick>
					<onclick>SetProperty(Dialog.2.BuiltIn,ActivateWindow(osdaudiosettings))</onclick>
					<onclick>SetProperty(Dialog.3.Label,$LOCALIZE[31040])</onclick>
					<onclick>SetProperty(Dialog.3.BuiltIn,ActivateWindow(subtitlesearch))</onclick>
					<onclick>SetProperty(Dialog.4.Label,$LOCALIZE[31041])</onclick>
					<onclick>SetProperty(Dialog.4.BuiltIn,ActivateWindow(playerprocessinfo))</onclick>
					<onclick>RunScript(script.toolbox,info=selectdialog,header=$LOCALIZE[33063])</onclick> 
				</control>
				<control type="label">
					<description>Spacer</description>
					<width>10</width>
				</control>
				<!--  Current position -->
				<control type="label" id="1">
					<width>auto</width>
					<height>50</height>
					<aligny>center</aligny>
					<font>reg24</font>
					<shadowcolor>text_shadow</shadowcolor>
					<label>$VAR[PlayerTimeLabels]</label>
					<visible>!String.IsEmpty(Player.Time)</visible>
				</control>
				<control type="label">
					<description>Spacer</description>
					<width>15</width>
				</control>
				<!--  Timeshift position -->
				<control type="label" id="1">
					<width>auto</width>
					<height>50</height>
					<aligny>center</aligny>
					<font>reg24</font>
					<textcolor>emby</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
					<label>$LOCALIZE[31038]</label>
					<visible>Pvr.IsTimeShift</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
