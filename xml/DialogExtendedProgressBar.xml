<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- extendedprogressdialog -->
	<zorder>2</zorder>
	<controls>
		<control type="progress" id="32">
			<include>HiddenObject</include>
		</control>
		<!-- Dialog -->
		<control type="group">			
			<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation) + !Window.IsVisible(notification)</visible>
			<include>Dialog_OpenClose</include>
			<width>500</width>
			<height>92</height>
			<right>0</right>
			<!-- Background image -->
			<control type="image">
				<texture colordiffuse="panel" border="10">common/dialog_back.png</texture>
			</control>
			<!-- icon -->
			<control type="group">
				<centertop>50%</centertop>
				<left>10</left>
				<width>80</width>
				<height>80</height>
				<!-- Icon back -->
				<control type="image">
					<texture>dialogs/progress/bg.png</texture>
				</control>
				<control type="image">
					<texture>dialogs/progress/100.png</texture>
					<colordiffuse>thumb_background</colordiffuse>
				</control>
				<control type="image">
					<texture>dialogs/progress/$VAR[ExtendedProgressCircle].png</texture>
					<colordiffuse>emby</colordiffuse>
				</control>
				<control type="image">
					<texture>dialogs/progress/13.png</texture>
					<colordiffuse>white</colordiffuse>
					<animation center="auto" condition="true" effect="rotate" end="-360" loop="true" reversible="false" time="1500">Conditional</animation>
				</control>
				<!-- Icon -->
				<control type="textbox">
					<align>center</align>
					<aligny>center</aligny>
					<font>Material24</font>
					<textcolor>text_white</textcolor>
					<label>î‹„</label>
				</control>
			</control>
			<!-- Heading -->
			<control id="30" type="label">
				<top>15</top>
				<left>100</left>
				<right>20</right>
				<font>Med24</font>
				<textcolor>white</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
			</control>
			<!-- Details -->
			<control id="31" type="label">
				<top>50</top>
				<left>100</left>
				<right>20</right>
				<right>10</right>
				<font>Reg22</font>
				<scroll>true</scroll>
				<textcolor>panel_text</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
			</control>
		</control>
	</controls>
</window>