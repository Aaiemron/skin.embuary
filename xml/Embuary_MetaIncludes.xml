	<!-- common includes -->
	<include name="MetaPoster">
		<control type="group">
			<left>70</left>
			<control type="image">
				<top>-2</top>
				<left>-2</left>
				<width>282</width>
				<height>420</height>
				<texture>items/shadow_poster.png</texture>
			</control>
			<control type="image">
				<width>276</width>
				<height>414</height>
				<texture colordiffuse="green" diffuse="items/mask_poster.png">common/white.jpg</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>String.IsEmpty(ListItem.Art(poster)) + String.IsEmpty(ListItem.Art(tvshow.poster)) + String.StartsWith(ListItem.Icon,default)</visible>
			</control>
			<control type="image">
				<width>276</width>
				<height>414</height>
				<texture colordiffuse="thumb_background" diffuse="items/mask_poster.png">common/white.jpg</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>!String.IsEmpty(ListItem.Art(poster)) | !String.IsEmpty(ListItem.Art(tvshow.poster)) | !String.StartsWith(ListItem.Icon,default)</visible>
			</control>
			<control type="textbox">
				<top>10</top>
				<left>10</left>
				<width>256</width>
				<height>394</height>
				<font>Light24</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Label]</label>			
			</control>
			<control type="image">
				<width>276</width>
				<height>414</height>
				<texture diffuse="items/mask_poster.png" background="true">$VAR[IconPoster]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
			</control>
			<control type="group">
				<width>276</width>
				<height>414</height>
				<control type="group">
					<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
					<right>8</right>
					<top>9</top>
					<width>44</width>
					<height>44</height>
					<control type="image">
						<width>44</width>
						<height>44</height>
						<texture colordiffuse="emby">items/bubble_small.png</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<top>9</top>
						<left>2</left>
						<width>44</width>
						<height>44</height>
						<label></label>
						<font>FontAwesome20Light</font>
						<shadowcolor>text_shadow</shadowcolor>
						<align>center</align>
					</control>
				</control>
			</control>
		</control>
	</include>
	<include name="MetaThumbnail">
		<control type="group">
			<left>70</left>
			<control type="image">
				<width>430</width>
				<height>242</height>
				<texture colordiffuse="green" diffuse="items/mask_wide_db.png">common/white.jpg</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>String.IsEmpty(ListItem.Art(tvshow.landscape)) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(fanart)) + ![!String.IsEmpty(ListItem.Art(thumb)) + Container.Content(episodes)]</visible>
			</control>
			<control type="image">
				<width>430</width>
				<height>242</height>
				<texture colordiffuse="thumb_background" diffuse="items/mask_wide_db.png">common/white.jpg</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>![String.IsEmpty(ListItem.Art(tvshow.landscape)) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(fanart)) + ![!String.IsEmpty(ListItem.Art(thumb)) + Container.Content(episodes)]]</visible>
			</control>
			<control type="textbox">
				<top>10</top>
				<left>10</left>
				<width>410</width>
				<height>222</height>
				<font>Light24</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Season,S,:]$INFO[ListItem.Episode,E, - ]$INFO[ListItem.Title]</label>
				<visible>String.IsEmpty(ListItem.Art(tvshow.landscape)) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(fanart)) + ![!String.IsEmpty(ListItem.Art(thumb)) + Container.Content(episodes)]</visible>
			</control>
			<control type="image">
				<width>430</width>
				<height>242</height>
				<texture diffuse="items/mask_wide_db.png" background="true">$VAR[IconLandscape]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
			</control>
			<control type="group">
				<width>430</width>
				<height>242</height>
				<include>bubble_play</include>
			</control>
		</control>
	</include>
	<include name="SkinHelperRatings">
		<param name="type">ListItem</param>
		<definition>			
			<control type="image">								
				<animation effect="slide" end="0,3" time="0" condition="true">Conditional</animation>
				<width>24</width>
				<height>20</height>
				<texture>icons/rating/metacritics_logo.png</texture>
				<aspectratio>keep</aspectratio>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.$PARAM[type].MetaCritic.Rating))</visible>
			</control>
			<control type="label">
				<width>auto</width>
				<height>24</height>
				<label>$INFO[Window(Home).Property(SkinHelper.$PARAM[type].MetaCritic.Rating),,%]   </label>
				<font>reg22</font>
				<shadowcolor>text_shadow</shadowcolor>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.$PARAM[type].MetaCritic.Rating))</visible>
			</control>
			<control type="image">								
				<animation effect="slide" end="0,3" time="0" condition="true">Conditional</animation>
				<width>24</width>
				<height>20</height>
				<texture>icons/rating/rotten_fresh.png</texture>
				<aspectratio>keep</aspectratio>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.$PARAM[type].RottenTomatoes.Rating)) + Integer.IsGreater(Window(Home).Property(SkinHelper.$PARAM[type].RottenTomatoes.Rating),59)</visible>
			</control>
			<control type="image">								
				<animation effect="slide" end="0,3" time="0" condition="true">Conditional</animation>
				<width>24</width>
				<height>20</height>
				<texture>icons/rating/rotten_rotten.png</texture>
				<aspectratio>keep</aspectratio>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.$PARAM[type].RottenTomatoes.Rating)) + !Integer.IsGreater(Window(Home).Property(SkinHelper.$PARAM[type].RottenTomatoes.Rating),59)</visible>
			</control>
			<control type="label">
				<width>auto</width>
				<height>24</height>
				<label>$INFO[Window(Home).Property(SkinHelper.$PARAM[type].RottenTomatoes.Rating),,%]   </label>
				<font>reg22</font>
				<shadowcolor>text_shadow</shadowcolor>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.$PARAM[type].RottenTomatoes.Rating))</visible>
			</control>
		</definition>
	</include>
