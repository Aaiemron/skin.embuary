<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol></defaultcontrol>
	<controls>
		<control type="group" id="1">

			<!--Top-->
			<control type="group" id="1">
				<control type="image" id="1">
					<top>0</top>
					<width>100%</width>
					<height>224</height>
					<texture colordiffuse="black">views/player/mask_top.png</texture>
				</control>
				<control type="image" id="1">
					<top>29</top>
					<left>29</left>
					<height>100</height>
					<texture>$INFO[Player.Art(tvshow.clearlogo)]</texture>
					<aspectratio align="left">keep</aspectratio>
				</control>
			</control>

			<!--Bottom-->
			<control type="group" id="1">
				<bottom>0</bottom>
				<control type="image" id="1">
					<bottom>0</bottom>
					<width>100%</width>
					<height>200</height>
					<texture colordiffuse="background_diffuse">views/player/mask_bottom.png</texture>
				</control>
				<control type="image" id="1">
					<bottom>20</bottom>
					<left>20</left>
					<width>268</width>
					<height>393</height>
					<texture>views/player/shadow_poster.png</texture>
				</control>
				<control type="image" id="1">
					<bottom>29</bottom>
					<left>29</left>
					<width>250</width>
					<height>375</height>
					<texture scalediffuse="false" colordiffuse="thumb_background" diffuse="views/player/mask_poster.png">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image" id="1">
					<bottom>29</bottom>
					<left>29</left>
					<width>250</width>
					<height>375</height>
					<texture scalediffuse="false" diffuse="views/player/mask_poster.png">$INFO[Player.Art(tvshow.poster)]</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<!--  Cache bar -->
				<control type="progress" id="99">
					<bottom>130</bottom>
					<left>309</left>
					<right>20</right>
					<height>5</height>
					<reveal>true</reveal>
					<info>Player.ProgressCache</info>
					<texturebg colordiffuse="background_diffuse">common/ProgressBack.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture colordiffuse="white">common/ProgressBar.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
				</control>
				<!--  Progress bar -->
				<control type="progress" id="99">
					<bottom>130</bottom>
					<left>309</left>
					<right>20</right>
					<height>5</height>
					<reveal>true</reveal>
					<info>Player.Progress</info>
					<texturebg colordiffuse="background_diffuse">common/ProgressBack.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture colordiffuse="emby">common/ProgressBar.png</midtexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
				</control>
				<!-- Label section -->
				<control type="grouplist" id="1">
					<orientation>horizontal</orientation>
					<height>30</height>
					<bottom>150</bottom>
					<left>309</left>
					<right>20</right>
					<itemgap>0</itemgap>
					<control type="label" id="1">
						<width>auto</width>
						<height>30</height>
						<aligny>bottom</aligny>
						<font>med26</font>
						<shadowcolor>text_shadow</shadowcolor>
						<label>$VAR[PlayerFullLabel]   </label>
					</control>
					<control type="label" id="1">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>$INFO[VideoPlayer.Year]   </label>
						<font>reg20</font>
						<shadowcolor>text_shadow</shadowcolor>
						<visible>!String.IsEmpty(VideoPlayer.Year)</visible>
					</control>
					<control type="label" id="1">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>$LOCALIZE[20074]: $INFO[VideoPlayer.Mpaa]   </label>
						<font>reg20</font>
						<shadowcolor>text_shadow</shadowcolor>
						<visible>!String.IsEmpty(VideoPlayer.Mpaa)</visible>
					</control>
					<control type="label" id="1">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>$VAR[PlayerResolution]   </label>
						<font>reg20</font>
						<shadowcolor>text_shadow</shadowcolor>
						<visible>!String.IsEmpty(VideoPlayer.VideoResolution)</visible>
					</control>
					<control type="label" id="1">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>î ¸</label>
						<font>Material24</font>
						<textcolor>red</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
						<visible>!String.IsEmpty(VideoPlayer.Rating)</visible>
					</control>
					<control type="label" id="1">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>$INFO[VideoPlayer.Rating]   </label>
						<font>reg20</font>
						<shadowcolor>text_shadow</shadowcolor>
						<shadowcolor>text_shadow</shadowcolor>
						<visible>!String.IsEmpty(VideoPlayer.Rating)</visible>
					</control>
				</control>
				<!-- bottom label section -->
				<control type="grouplist" id="1">
					<visible>!Window.IsVisible(VideoOSD)</visible>
					<orientation>horizontal</orientation>
					<height>50</height>
					<bottom>50</bottom>
					<left>309</left>
					<right>20</right>
					<itemgap>0</itemgap>
					<!--  Current position -->
					<control type="label" id="1">
						<width>auto</width>
						<height>50</height>
						<aligny>center</aligny>
						<font>reg20</font>
						<shadowcolor>text_shadow</shadowcolor>
						<label>$VAR[PlayerTime] / $VAR[PlayerDuration]</label>
						<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
					</control>
				</control>

			</control>

		</control>
	</controls>
</window>
