<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="false">10</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<controls>
		<!-- Hidden -->

		<control type="list" id="50">
			<include>HiddenObject</include>
			<itemlayout/>
			<focusedlayout/>
			<content limit="1">special://skin/playlists/video/RandomMovies.xsp</content>
		</control>
		<control type="list" id="51">
			<include>HiddenObject</include>
			<itemlayout/>
			<focusedlayout/>
			<content limit="4">videodb://movies/titles/</content>
		</control>
		<control type="list" id="52">
			<include>HiddenObject</include>
			<itemlayout/>
			<focusedlayout/>
			<content limit="4">videodb://tvshows/titles/</content>
		</control>
		<control type="list" id="53">
			<include>HiddenObject</include>
			<itemlayout/>
			<focusedlayout/>
			<content limit="4">pvr://channels/tv/*</content>
		</control>
		<control type="list" id="54">
			<include>HiddenObject</include>
			<itemlayout/>
			<focusedlayout/>
			<content limit="4">musicdb://artists/</content>
		</control>
		<!-- background -->
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<texture>$INFO[Container(50).ListItem.Art(fanart)]</texture>
		</control>
		<control type="image">
			<width>1920</width>
			<height>1080</height>
			<texture>common/wp_overlay2.png</texture>
		</control>
		<!-- hub -->
		<control type="group">
			<left>0</left>
			<!--<animation type="Conditional" condition="ControlGroup(20).HasFocus" reversible="true">
				<effect type="slide" start="0" end="462" time="400" tween="cubic" easing="inout" />
			</animation>-->
			<control type="grouplist" id="10">
				<defaultcontrol>10000</defaultcontrol>
				<width>2130</width>
				<height>100%</height>
				<itemgap>-160</itemgap>
				<orientation>vertical</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<scrolltime tween="sine" easing="out">400</scrolltime>

				<include>Bounce_Up_Down</include>

				<include content="WidgetSpacer">
					<param name="id" value="101"/>
				</include>

				<include content="WidgetMenu">
					<param name="id" value="100"/>
					<param name="onup" value="6666"/>
					<param name="ondown" value="200"/>
					<param name="headline" value="$LOCALIZE[14211]"/>
				</include>

				<include content="WideWidget">
					<param name="id" value="200"/>
					<param name="onup" value="100"/>
					<param name="ondown" value="20101"/>
					<param name="headline" value="$LOCALIZE[575]"/>
					<param name="mainlabel" value="$INFO[ListItem.Label]"/>
					<param name="sublabel" value="$INFO[ListItem.Year]"/>
					<param name="icon" value="$INFO[ListItem.Art(landscape)]"/>
					<param name="content" value="plugin://script.skin.helper.widgets/?action=inprogress&amp;mediatype=media&amp;reload=$INFO[Window(Home).Property(widgetreload)]"/>
				</include>


				<include content="PVRSquareWidget">							
					<param name="id" value="201"/>
					<param name="onup" value="200"/>
					<param name="ondown" value="202"/>
					<param name="headline" value="$LOCALIZE[575]"/>
					<param name="mainlabel" value="$INFO[ListItem.Title]"/>
					<param name="sublabel" value="$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]"/>
					<param name="icon" value="$INFO[ListItem.Art(landscape)]"/>
					<param name="content" value="pvr://channels/tv/*"/>
				</include>

				<include content="WideWidget">							
					<param name="id" value="202"/>
					<param name="onup" value="201"/>
					<param name="ondown" value="203"/>
					<param name="headline" value="$LOCALIZE[626]"/>
					<param name="mainlabel" value="$INFO[ListItem.TvShowTitle]"/>
					<param name="sublabel" value="$INFO[ListItem.Season,S,:]$INFO[ListItem.Episode,E, - ]$INFO[ListItem.Title]"/>
					<param name="icon" value="$INFO[ListItem.Art(poster)]"/>
					<param name="content" value="plugin://script.skin.helper.widgets/?action=next&amp;mediatype=episodes&amp;reload=$INFO[Window(Home).Property(widgetreload)]"/>
				</include>

				<include content="PosterWidget">
					<param name="id" value="203"/>
					<param name="onup" value="202"/>
					<param name="ondown" value="204"/>
					<param name="headline" value="$LOCALIZE[20386]"/>
					<param name="mainlabel" value="$INFO[ListItem.Label]"/>
					<param name="sublabel" value="$INFO[ListItem.Year]"/>
					<param name="icon" value="$INFO[ListItem.Art(poster)]"/>
					<param name="content" value="special://skin/playlists/video/RecentlyAddedMovies.xsp"/>
				</include>

				<include content="WideWidget">
					<param name="id" value="204"/>
					<param name="onup" value="203"/>
					<param name="ondown" value="205"/>
					<param name="headline" value="$LOCALIZE[20387]"/>
					<param name="mainlabel" value="$INFO[ListItem.Label]"/>
					<param name="sublabel" value="$INFO[ListItem.Year]"/>
					<param name="icon" value="$INFO[ListItem.Art(landscape)]"/>
					<param name="content" value="special://skin/playlists/video/RecentlyUpdatedTVShows.xsp"/>
				</include>

				<include content="SquareWidget">
					<param name="id" value="205"/>
					<param name="onup" value="204"/>
					<param name="ondown" value="SetProperty(BounceDown,1,home)"/>
					<param name="headline" value="$LOCALIZE[359]"/>
					<param name="mainlabel" value="$INFO[ListItem.Album]"/>
					<param name="sublabel" value="$INFO[ListItem.Artist]"/>
					<param name="icon" value="$INFO[ListItem.Icon]"/>
					<param name="content" value="musicdb://recentlyaddedalbums/"/>
				</include>
			</control>
		</control>

		
		<include>BottomBar</include>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">10</param>
			<param name="sidebar_id">9999</param>
		</include>
		<!-- diffuse -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="88000000">common/white.jpg</texture>
			<aspectratio>stretch</aspectratio>
			<visible>!ControlGroup(10).HasFocus + !ControlGroup(6666).HasFocus</visible>
			<include>Visible_Fade</include>
		</control>
		<!-- side panel -->
		<include content="SidePanel"/>
	</controls>
</window>
