				<control type="grouplist">
					<left>434</left>
					<orientation>vertical</orientation>
					<height>1020</height>
					<width>1416</width>
					<align>top</align>
					<itemgap>0</itemgap>
					<control type="label">
						<width>100%</width>
						<height>60</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Reg37</font>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="grouplist">
						<height>40</height>
						<width>100%</width>
						<itemgap>5</itemgap>
						<orientation>horizontal</orientation>
						<control type="label">
							<width>auto</width>
							<height>24</height>
							<label>$LOCALIZE[19114]: $INFO[ListItem.AddonVersion]   </label>
							<font>reg22</font>
							<shadowcolor>text_shadow</shadowcolor>
							<visible>!String.IsEmpty(ListItem.AddonVersion)</visible>
