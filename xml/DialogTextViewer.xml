<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<include>Dialog_PopupOpenClose</include>	
	<controls>
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="background_diffuse">common/white.jpg</texture>
		</control>
		<include content="ScrollbarVertical">
			<param name="id">3000</param>
			<param name="visible">false</param>
		</include>
		<control type="grouplist">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>800</width>
			<height max="940">auto</height>
			<orientation>vertical</orientation>
			<itemgap>20</itemgap>
			<align>center</align>
			<!-- headline -->	
			<control id="1" type="label">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height>26</height>
				<font>Med26Spaced</font>
				<textcolor>text_white</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<autoscroll>false</autoscroll>
				<align>center</align>
				<aligny>top</aligny>
			</control>
			<!-- message -->	
			<control id="5" type="textbox">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height max="745">auto</height>
				<font>Reg26Spaced</font>
				<textcolor>text_white</textcolor>
				<shadowcolor>text_shadow</shadowcolor>
				<autoscroll>false</autoscroll>
				<align>center</align>
				<aligny>top</aligny>
				<pagecontrol>3000</pagecontrol>
			</control>
			<!-- Button -->
			<control type="grouplist" id="100">
				<height>50</height>
				<width>100%</width>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<align>center</align>
				<onright>noop</onright>
				<onleft>noop</onleft>
				<control type="button" id="101">
					<label>$LOCALIZE[15067]</label>
					<onclick>close</onclick>
					<onup>PageUp(3000)</onup>
					<ondown>PageDown(3000)</ondown>
				</control>
			</control>
		</control>
	</controls>
</window>
